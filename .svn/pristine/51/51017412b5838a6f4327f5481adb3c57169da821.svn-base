/*a--pages***********container************/
.clear{overflow: hidden;}
.fl{float: left;}
.pos-r{position: relative;}
/*角色权限rolepage和数字字典dictionary【有固定头部】*/
.Rolepage-container,.dictionary1,.dictionary{height: 100%;}
.Rolepage-container  .section-wrap-title,
.dictionary1         .section-wrap-title{
	font-size: 14px;font-weight: 600;padding:0px 15px;box-sizing:border-box;border-bottom: 1px solid #dedede;height: 41px;line-height:36px;overflow-x: hidden; overflow-y: auto; 	
}
.dictionary .portlet .portlet-title{
	font-size: 14px;font-weight: 600;padding:0px 15px;box-sizing:border-box;border-bottom: 1px solid #dedede;height: 41px;line-height:36px;overflow-x: hidden;   overflow-y: auto;	
}
.Rolepage-container  .section-wrap-title>span{display: inline-block; line-height: 40px;}   
.dictionary1         .section-wrap-title>div>span{display: inline-block;line-height: 40px;}

/*左右*/
/*角色权限rolepage*/
 .Rolepage-container .container_left {
   /*  width:calc(100% - 220px);*/
     height: 100%; 
     position: relative;
      /*去除那个伪类做的线，因为js定了放tree的盒子高自适应屏幕*/
       /* border-right: 1px solid #eee;*/
}

 .Rolepage-container .container_right {	
   /* width: 220px;*/
    height: 100%;   
     position: relative; 
   
}  
.Rolepage-container  .container_right .tree-demo{height:calc(100% - 45px);overflow: auto;}
.Rolepage-container>.container_left>.portlet{height:calc(100% - 45px);}
.Rolepage-container>.container_left>.portlet>.portlet-body{height:100%; overflow: auto;}
